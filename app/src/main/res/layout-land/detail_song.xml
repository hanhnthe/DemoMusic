<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/contans_fargemt"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/manhinh"
            android:layout_width="216dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/whilebackground"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/anh_oi_o_lai" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameSong3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="anh oi o lai"
                    android:textColor="#000"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/author2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="chi pu"
                    android:textSize="8sp" />

            </LinearLayout>


            <ImageButton
                android:id="@+id/popup2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/whilenull"
                android:src="@drawable/ic_popup_small" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/repeatbutton"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/ic_repeat"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/manhinh" />

        <ImageButton
            android:id="@+id/shufflebutton"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="19dp"
            android:background="@drawable/ic_shuffle_white"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="@+id/manhinh" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/whilebackground"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:gravity="right"
                    android:paddingLeft="13dp"
                    android:text="0:00"
                    android:paddingRight="15dp"
                    android:textColor="#B000"
                    android:textSize="8sp" />

                <ImageButton
                    android:id="@+id/likeButton"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:paddingRight="2dp"
                    android:layout_gravity="top|right"
                    android:background="@drawable/ic_like" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                 >
                <ImageButton
                    android:id="@+id/leftButton"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ic_left"
                    android:layout_marginLeft="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="53dp"
                android:layout_height="match_parent"
                android:id="@+id/play">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/whilenull"
                    android:src="@drawable/ic_play2_land"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/playSong2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_pause_22"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <ImageButton
                    android:id="@+id/rightButton"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ic_right"
                    android:layout_marginRight="7dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/maxTime"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:gravity="left"
                    android:paddingRight="13dp"
                    android:text="5:15"
                    android:paddingLeft="15dp"
                    android:textColor="#B000"
                    android:textSize="8sp" />

                <ImageButton
                    android:id="@+id/disLikeButton"
                    android:paddingLeft="2dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="top"
                    android:background="@drawable/ic_dis_like"
                    />
            </LinearLayout>


        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="31dp"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="0dp"
        android:secondaryProgress="100" />
</FrameLayout>
